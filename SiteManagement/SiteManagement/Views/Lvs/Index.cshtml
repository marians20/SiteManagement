@model IPagedList<SiteManagement.Models.Lv>
@using Sakura.AspNetCore

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container" style="margin-top:10px; margin-bottom: 10px;">
    <form asp-action="Index" method="get">
        <div class="row">
            <div id="custom-search-input">
                <div class="input-group col-md-4">
                    <input type="text" name="SearchString" value="@ViewData["currentFilter"]"
                           class="search-query form-control" placeholder="Search" />
                    <span class="input-group-btn">
                        <button class="btn btn-danger" type="button">
                            <span class=" glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index">Back to Full List</a>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-bordered table-condensed table-responsive table-hover">
    <thead>
        <tr>
            <th>

                <a asp-action="Index" asp-route-sortOrder="@ViewData["PosNrSortParam"]">@Html.DisplayNameFor(model => model.First().PosNr)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.First().Name)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AmmountSortParam"]">@Html.DisplayNameFor(model => model.First().Ammount)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EpSortParam"]">@Html.DisplayNameFor(model => model.First().Ep)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GpSortParam"]">@Html.DisplayNameFor(model => model.First().Gp)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GroupSortParam"]">@Html.DisplayNameFor(model => model.First().Group)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MeasureUnitSortParam"]">@Html.DisplayNameFor(model => model.First().MeasureUnit)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PosNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ammount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeasureUnit.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<pager />